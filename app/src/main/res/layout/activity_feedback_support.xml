<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/header_bg">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="FEEDBACK &amp; SUPPORT"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/menupanel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_button" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/titlebar"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/phone_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"

                android:layout_marginLeft="10dp"
                android:background="@drawable/mobile" />

            <TextView
                android:id="@+id/phone_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/phone_image"

                android:gravity="center_vertical"
                android:text="PHONE"

                android:textSize="15sp" />

            <TextView
                android:id="@+id/supprt_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:inputType="text"
                android:singleLine="true"

                android:textSize="17sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="5dp"
            android:background="#a4a4a4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mail_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"

                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/email_icon" />

            <TextView
                android:id="@+id/email_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/mail_image"
                android:text="EMAIL"

                android:textSize="17sp" />

            <TextView
                android:id="@+id/support_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="5dp"

            android:background="#a4a4a4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/faqs"
                android:layout_width="match_parent"


                android:layout_height="80dp">

                <ImageView
                    android:id="@+id/faqimage"

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/mobile" />

                <TextView
                    android:id="@+id/faq_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/faqimage"
                    android:layout_weight=".95"
                    android:text="FAQs"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/faq_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:autoLink="web"
                    android:textColor="#F18380"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.3dp"
                android:layout_marginTop="5dp"

                android:background="#a4a4a4" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/tutoriallayout"
            android:layout_width="match_parent"

            android:layout_height="80dp"
            >

            <ImageView
                android:id="@+id/faq_image"

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/tutorial" />

            <TextView
                android:id="@+id/faq_tutorial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/faq_image"
                android:layout_weight=".95"
                android:text="Tutorial"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/faq_tutorial_video_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:autoLink="web"
                android:textColor="#808080"
                android:textSize="10sp" />

            <VideoView
                android:id="@+id/faq_tutorial_video_link_videoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="#C18389"
                android:textSize="10sp"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="5dp"
            android:background="#a4a4a4"
            />

        <RelativeLayout
            android:id="@+id/pointCollectionLayout"
            android:layout_width="match_parent"

            android:layout_height="80dp"
            >

            <ImageView
                android:id="@+id/point_image"

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_businessman" />

            <TextView
                android:id="@+id/faq_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/point_image"
                android:layout_weight=".95"
                android:text="Point Collation"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/point_point"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:autoLink="web"
                android:textSize="10sp"
                android:textColor="#000000"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="5dp"
            android:background="#a4a4a4"
            />


    </LinearLayout>
</RelativeLayout>