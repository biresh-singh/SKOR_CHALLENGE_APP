<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_chat_list_rootRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <FrameLayout
            android:id="@+id/item_chat_list_userPhotoFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_chat_list_userPhoto"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="9dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@color/loading_yellow"/>
            <TextView
                android:id="@+id/item_chat_list_profilePictureTextView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:textSize="20sp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="9dp"
                android:text="A"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/white"/>
        </FrameLayout>
        <TextView
            android:id="@+id/item_chat_list_userName"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="name"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_black"
            android:layout_toRightOf="@id/item_chat_list_userPhotoFrameLayout"/>
        <TextView
            android:id="@+id/item_chat_list_lastMessage"
            android:layout_below="@id/item_chat_list_userName"
            android:layout_toRightOf="@id/item_chat_list_userPhotoFrameLayout"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:layout_marginTop="8dp"
            android:text="last message"
            android:textColor="@color/skor_chat_gray_status"
            android:textSize="15sp"
            android:maxLines="2"/>
        <TextView
            android:id="@+id/item_chat_list_timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginRight="13dp"
            android:layout_marginTop="10dp"
            android:textSize="10sp"
            android:textColor="@color/light_gray"
            android:layout_alignParentRight="true"
            />
        <FrameLayout
            android:id="@+id/item_chat_list_notificationSingleFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:layout_below="@id/item_chat_list_timeTextView"
            android:visibility="gone">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/item_chat_list_notificationSingleImageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@color/red_notification"
                android:maxLines="2"/>
            <TextView
                android:id="@+id/item_chat_list_notificationSingleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="5"
                android:layout_gravity="center"
                />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/item_chat_list_notificationMultipleFrameLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:layout_below="@id/item_chat_list_timeTextView">
            <TextView
                android:id="@+id/item_chat_list_notificationMultipleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="52"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:layout_gravity="center"
                android:background="@drawable/red_rounded_corners"
                />
        </FrameLayout>
    </RelativeLayout>
    <View
        android:id="@+id/item_chat_list_dividerView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skor_chat_divider"
        android:layout_marginTop="8dp"/>
</LinearLayout>