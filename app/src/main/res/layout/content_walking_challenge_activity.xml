<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="activity.challenge.WalkingtakeChallengeActivity"
    tools:showIn="@layout/activity_walking_challenge">

    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llTakeChallenge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20sp"
            android:orientation="vertical"
            android:visibility="visible">

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:alpha="0.3"
                android:background="@drawable/shape_shadow_bottom" />

            <CustomClass.RobotoBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:gravity="center"
                android:hint="@string/walkingactivity"
                android:textColor="@color/colorBlack"
                android:textColorHint="@color/colorBlack"
                android:textSize="20sp" />

            <CustomClass.RobotoRegularTextView
                android:id="@+id/tvTotalPoint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:hint="10,000 Stars"
                android:textColor="@color/red"
                android:textColorHint="@color/red"
                android:textSize="20sp" />

            <CustomClass.RobotoRegularTextView
                android:id="@+id/tvTotalParticipants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableLeft="@drawable/participants"
                android:drawablePadding="@dimen/_5sdp"
                android:gravity="center"
                android:hint="25 Participants"
                android:textColor="@color/dark"
                android:textColorHint="@color/dark"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:padding="@dimen/_10sdp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="7sp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txtProgress"
                    android:progress="0"
                    android:progressDrawable="@drawable/progress_drawable_custom" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                        android:layout_weight=".33"
                        android:orientation="vertical">

                        <CustomClass.RobotoRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:text="20%"
                            android:textColor="@color/colorBlack"
                            android:textSize="25sp" />

                        <CustomClass.RobotoRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Done"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14ssp" />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/dark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                        android:layout_weight=".34"
                        android:orientation="vertical">

                        <CustomClass.RobotoRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:text="3198"
                            android:textColor="@color/colorBlack"
                            android:textSize="30sp" />

                        <CustomClass.RobotoRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Step"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14ssp" />
                    </LinearLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@color/dark" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center"
                        android:layout_weight=".33"
                        android:orientation="vertical">

                        <CustomClass.RobotoRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/_5sdp"
                            android:paddingTop="@dimen/_5sdp"
                            android:text="1089"
                            android:textColor="@color/colorBlack"
                            android:textSize="30sp" />

                        <CustomClass.RobotoRegularTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today's Step"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_14ssp" />
                    </LinearLayout>
                </LinearLayout>


                </LinearLayout>

            </LinearLayout>





            <CustomClass.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:gravity="center"
                android:hint="Walk min 2000 steps/day in office area .ds dsd slkdnskdnskd sjkdsjkd sjkdbsjkdsjkd askjd sjkd sd ask "
                android:textColor="@color/dark"
                android:textColorHint="@color/dark"
                android:textSize="15sp" />

            <CustomClass.RobotoBoldTextView
                android:id="@+id/tvCheckIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/take_challenge_background"
                android:gravity="center"
                android:text="@string/startwalking"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingRight="@dimen/_30sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                android:textAllCaps="true"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/container_timeline_indicator"
                android:layout_width="30dp"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/tv_timeline_indicator_line"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dark"
                    android:layout_marginTop="5dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_shadow_bottom"
                    android:layout_toRightOf="@+id/tv_timeline_indicator_line"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:layout_weight="50"
                                >
                                <CustomClass.RobotoBoldTextView
                                    android:id="@+id/tvDay1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:gravity="left"
                                    android:hint="Day 1"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/dark"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    />

                                <CustomClass.RobotoRegularTextView
                                    android:id="@+id/tvDay1Date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:drawablePadding="@dimen/_5sdp"
                                    android:hint="- 04/05/2018"
                                    android:textColor="@color/dark"
                                    android:textColorHint="@color/dark"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layout_weight="50"
                                android:layout_marginRight="@dimen/_8sdp"
                                >
                                <CustomClass.RobotoRegularTextView
                                    android:id="@+id/tvCompletedStatus"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:gravity="left"
                                    android:hint="100% completed"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/dark"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    />

                                <CustomClass.RobotoRegularTextView
                                    android:id="@+id/tvtotalSteps"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/take_challenge_background"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:hint="2109 steps"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"
                                    android:textSize="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/progressBarDay1"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="7sp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/txtProgress"
                            android:progress="100"
                            android:progressDrawable="@drawable/progress_drawable_custom"

                            />
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-8dp"
            >

            <RelativeLayout
                android:id="@+id/container_timeline_indicator2"
                android:layout_width="30dp"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/tv_timeline_indicator_line2"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@color/dark"
                    android:layout_marginTop="5dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/shape_shadow_bottom"
                    android:layout_toRightOf="@+id/tv_timeline_indicator_line2"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_10sdp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="100"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="left"
                                android:gravity="left"
                                android:layout_weight="50"
                                >
                                <CustomClass.RobotoBoldTextView
                                    android:id="@+id/tvDay2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:gravity="left"
                                    android:hint="Today"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/dark"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    />

                                <CustomClass.RobotoRegularTextView
                                    android:id="@+id/tvDay2Date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:drawablePadding="@dimen/_5sdp"
                                    android:hint="- 05/05/2018"
                                    android:textColor="@color/dark"
                                    android:textColorHint="@color/dark"
                                    android:textSize="@dimen/_10sdp" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="right"
                                android:gravity="right"
                                android:layout_weight="50"
                                android:layout_marginRight="@dimen/_8sdp"
                                >
                                <CustomClass.RobotoRegularTextView
                                    android:id="@+id/tvCompletedStatus2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:gravity="left"
                                    android:hint="52% completed"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/dark"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold"
                                    />

                                <CustomClass.RobotoRegularTextView
                                    android:id="@+id/tvtotalSteps2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/take_challenge_background"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:hint="1089 steps"
                                    android:textColor="@color/white"
                                    android:textColorHint="@color/white"
                                    android:textSize="@dimen/_10sdp"
                                    android:paddingBottom="@dimen/_2sdp"
                                    android:paddingLeft="@dimen/_5sdp"
                                    android:paddingRight="@dimen/_5sdp"
                                    android:paddingTop="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_5sdp"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                        <ProgressBar
                            android:id="@+id/progressBarDay2"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="7sp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/txtProgress"
                            android:progress="50"
                            android:progressDrawable="@drawable/progress_drawable_custom"

                            />
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/shape_shadow_bottom"
            android:layout_marginTop="@dimen/_15sdp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CustomClass.RobotoBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_7sdp"
                    android:text="25 Colleagues have accept this challenge"
                    android:textColor="@color/appBlack"
                    android:textSize="16sp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:padding="@dimen/_7sdp"
                    android:src="@drawable/right_arrow"
                    android:tint="#000000" />
            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/scrollHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal">

                <LinearLayout
                    android:id="@+id/llColleagues"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        </LinearLayout>

</android.support.v4.widget.NestedScrollView>