<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/item_feed_featured_news_detail_rootFrameLayout"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/item_feed_featured_news_detail_imageView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_gravity="bottom">

        <CustomClass.RobotoRegularTextView
            android:id="@+id/item_feed_featured_news_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:minLines="2"
            android:maxLines="2"/>
    </FrameLayout>


</FrameLayout>