<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ebebeb"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_contacts_header_headerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Group Contacts (0)"
            android:textColor="@color/chat_text"
            android:textSize="10dp"
            android:layout_gravity="center|left"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="13dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/item_contacts_header_createGroupLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@drawable/rectangle_shape"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Group"
                android:textSize="10dp"
                android:textColor="@color/chat_text"
                android:layout_gravity="center"
                android:layout_margin="4dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_plus"
                android:backgroundTint="@color/chat_text"
                android:layout_gravity="center"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/item_contacts_header_dropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/chat_text"
            android:layout_gravity="center|right"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"/>


    </LinearLayout>

</LinearLayout>