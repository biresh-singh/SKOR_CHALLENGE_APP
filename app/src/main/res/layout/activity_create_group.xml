<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray7"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:background="@drawable/header_bg"
        android:orientation="horizontal"
        android:paddingLeft="17dp"
        android:paddingRight="17dp">
        <ImageView
            android:id="@+id/activity_create_group_backButtonImageView"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:background="@drawable/back_btn" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <utils.ArialRegularTextView
                android:id="@+id/activity_create_group_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Group"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:gravity="center"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"/>
            <utils.ArialRegularTextView
                android:id="@+id/activity_create_group_numberOfUsersTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        <utils.ArialRegularTextView
            android:id="@+id/activity_create_group_nextTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:textSize="15sp"
            android:text="Next"
            android:textColor="#FFFFFF"/>

        <utils.ArialRegularTextView
            android:id="@+id/activity_create_group_doneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="23dp"
            android:textSize="15sp"
            android:text="Done"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_create_group_containerLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>

</LinearLayout>