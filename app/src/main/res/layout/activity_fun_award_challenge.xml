<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlTop"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/bgApp">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:padding="@dimen/_10sdp"
                    android:scaleType="center"
                    android:src="@drawable/left_arrow"
                    android:tint="#000000" />

                <CustomClass.RobotoBoldTextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="Employee funaward"
                    android:textAllCaps="true"
                    android:textSize="20sp" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:alpha="0.3"
                android:background="@drawable/shape_shadow_bottom" />


            <CustomClass.RobotoBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_15sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:paddingTop="@dimen/_15sdp"
                android:text="Please vote for the best attire of the day."
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                android:typeface="sans"
                android:textAlignment="center"
                android:textColor="@color/black"
                />

            <utils.CircleImageView
                android:id="@+id/userimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/default_user"
                app:border_color="#FF9100"
                app:border_width="2dp"
                android:layout_gravity="center"
                />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/white_background_gray_stroke_rounded_corner"
                android:hint="@string/funawardsearchhint"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:gravity="center_horizontal"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@android:color/black"
                android:textColorHint="#CECECE"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:text="Annabelle"
                android:drawableRight="@drawable/edit_icon"
                android:drawableTint="@color/black"

                />

            <CustomClass.RobotoBoldTextView
                android:id="@+id/tvVotenow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/take_challenge_background"
                android:gravity="center"
                android:text="@string/votenow"
                android:paddingBottom="@dimen/_10sdp"
                android:paddingLeft="@dimen/_30sdp"
                android:paddingRight="@dimen/_30sdp"
                android:paddingTop="@dimen/_10sdp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="14sp"
                android:textAllCaps="true"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>