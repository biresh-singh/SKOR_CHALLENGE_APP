<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_preview_new_itemsViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/activity_student_photo_album_headerFrameLayout"/>

    <ImageView
        android:id="@+id/activity_preview_new_chating_backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:tint="@color/white"
        android:src="@drawable/back_btn" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:visibility="gone"
        android:background="#000000"
        android:layout_gravity="bottom">
        <LinearLayout
            android:id="@+id/activity_preview_new_downloadButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right">
            <ImageView
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_donlod" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>

