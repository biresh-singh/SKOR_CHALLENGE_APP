<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="5dp"
              android:paddingBottom="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/shape_survey_polling_item_dark_gray">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <View
                android:id="@+id/percentage_left_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_survey_polling_item_blue"
                android:layout_weight="0.6"/>

            <View
                android:id="@+id/percentage_right_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"/>
        </LinearLayout>

        <CustomClass.RobotoRegularTextView
            android:id="@+id/option_percentage_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:text="@string/dummy_question_percentage"
            android:inputType="textCapSentences"
            android:textColorHint="#7A7A7A"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <CustomClass.RobotoRegularTextView
            android:id="@+id/option_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:text="@string/dummy_question_preview_answer"
            android:inputType="textCapSentences"
            android:textColorHint="#7A7A7A"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>