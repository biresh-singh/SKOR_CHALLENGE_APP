<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="3dp"
    android:orientation="vertical">

    <CustomClass.RobotoRegularTextView
        android:id="@+id/option_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:text="@string/dummy_polling_option_text"
        android:textColor="#7A7A7A"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#CACACA"
            android:orientation="horizontal">

            <View
                android:id="@+id/polling_percentage_left"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_polling_your_choice"
                android:layout_weight="0.5"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp" />

            <View
                android:id="@+id/polling_percentage_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"/>
        </LinearLayout>

        <CustomClass.RobotoBoldTextView
            android:id="@+id/your_choice_label"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:drawableLeft="@drawable/your_choice_icon"
            android:drawablePadding="5dp"
            android:text="@string/your_choice_text"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <CustomClass.RobotoRegularTextView
            android:id="@+id/option_percentage_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:text="@string/dummy_question_percentage"
            android:inputType="textCapSentences"
            android:textColorHint="#7A7A7A"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>