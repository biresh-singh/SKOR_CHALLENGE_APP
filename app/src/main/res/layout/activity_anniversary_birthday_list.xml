<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_anniversary_birthday_list_toolbarRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#ffffff">

        <CustomClass.RobotoBoldTextView
            android:id="@+id/activity_anniversary_birthday_list_titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="TITLE"
            android:textColor="#545454"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/activity_anniversary_birthday_list_backLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back_button"
                android:backgroundTint="#000000" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="#ffffff"
            android:orientation="horizontal">

            <CustomClass.RobotoBoldTextView
                android:id="@+id/activity_anniversary_birthday_list_birthdayTextView"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:gravity="center"
                android:text="BIRTHDAY"
                android:textSize="14dp" />

            <CustomClass.RobotoBoldTextView
                android:id="@+id/activity_anniversary_birthday_list_anniversaryRelativeLayout"
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:elevation="5dp"
                android:gravity="center"
                android:text="ANNIVERSARY"
                android:textSize="14dp" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_anniversary_birthday_list_birthdayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_anniversary_birthday_list_anniversaryRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/activity_anniversary_birthday_list_noAnniversaryOrBirthdayTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="No Birthday today"
            android:gravity="center"/>

    </FrameLayout>

</LinearLayout>