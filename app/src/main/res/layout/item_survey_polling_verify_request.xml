<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="19dp"
    android:background="@drawable/selector_survey_polling_item_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:id="@+id/survey_polling_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/survey_icon"
            android:layout_centerVertical="true"
            android:background="@color/white"/>

        <CustomClass.RobotoRegularTextView
            android:id="@+id/survey_polling_header_start_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="@string/polling_about_text"
            android:layout_toRightOf="@id/survey_polling_image_view"
            android:textSize="14sp"/>

        <CustomClass.RobotoBoldTextView
            android:id="@+id/survey_polling_header_title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:text="Office Outing"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/survey_polling_header_start_label"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_right_arrow"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CustomClass.RobotoBoldTextView
            android:id="@+id/survey_polling_title_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="@string/dummy_question_preview_label1"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <CustomClass.RobotoRegularTextView
            android:id="@+id/survey_polling_creator_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/survey_polling_title_label"
            android:text="@string/verify_request_by_time_text" />

        <CustomClass.RobotoRegularTextView
            android:id="@+id/survey_polling_total_recipient_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/survey_polling_creator_label"
            android:layout_marginTop="5dp"
            android:text="@string/verify_request_recipients_on_going_text"
            android:textSize="14sp"
            android:textColor="#4A90E2"
            android:visibility="visible"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/survey_polling_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="sans-serif"
                android:text="Approved"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="#808080" />

            <CustomClass.RobotoRegularTextView
                android:id="@+id/survey_polling_new_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="@string/new_text"
                android:background="@drawable/shape_rounded_rectangle_orange"
                android:textColor="@color/white" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>