<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_comment_imageCircleImageView"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_comment_nameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/item_comment_timeCommentTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="8sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/item_comment_commentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="#231F20"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/item_comment_lineFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="16dp"
        android:background="#95989A" />
</LinearLayout>