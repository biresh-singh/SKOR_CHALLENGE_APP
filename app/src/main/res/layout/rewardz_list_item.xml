<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:layout_margin="1dp"

    card_view:cardCornerRadius="2dp"
    card_view:contentPadding="5dp">
    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/userlayout"
            android:layout_width="70dp"

            android:layout_height="fill_parent"
            android:background="#50c2ff">
            <utils.CircleImageView
                android:id="@+id/userimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                app:border_color="#027CBA"
                app:border_width="2dp"
                />
            <!--<ImageView
                android:id="@+id/userimage"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_user"/>-->
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/userlayout"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="16sp"

                android:layout_marginTop="0dp"
                android:paddingLeft="20dp"


                android:text="Title"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="12sp"
                android:alpha="0.5"
                android:layout_toRightOf="@+id/userlayout"
                android:layout_marginTop="0dp"
                android:layout_below="@+id/title"
                android:paddingLeft="20dp"
                android:maxLines="1"
                android:text="subtitle"/>
        </LinearLayout>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="date"
            android:textColor="#444444"
            android:visibility="gone"
            android:textSize="8sp"
            android:layout_marginTop="3dp"
            android:paddingBottom="3dp"/>
        <Button
            android:id="@+id/attendingbutton"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="Redeem"
            android:layout_alignParentRight="true"
            android:elevation="5dp"
            android:shadowColor="#444444"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:background="@drawable/rewardz_button_bg"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:layout_marginRight="10dp"
            ></Button>
    </RelativeLayout>
</android.support.v7.widget.CardView>