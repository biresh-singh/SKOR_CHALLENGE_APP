<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_15sdp"
        android:orientation="horizontal">



        <RelativeLayout

            android:layout_width="@dimen/_25sdp"
            android:layout_gravity="right|top"
            android:layout_height="@dimen/_25sdp"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/_3sdp"

            android:layout_alignParentLeft="true"
            >

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rules_no_circle" />

            <CustomClass.RobotoRegularTextView
                android:id="@+id/tv_rules_cnt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/_11sdp"
                android:layout_centerInParent="true"
                android:textColor="@color/black" />


        </RelativeLayout>


        <CustomClass.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Find QR codes that placed on some areas the one who find all firsts are the winner and challenge will close automatically."
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:textColor="@color/dark"
            android:textColorHint="@color/dark"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/tvRulesText"

            />

    </LinearLayout>

</RelativeLayout>