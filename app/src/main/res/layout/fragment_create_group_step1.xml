<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext="fragment.SkorChat.CreateGroupStep1Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/fragment_create_group_step1_messageEditText"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:maxLines="1"
            android:inputType="text"
            android:drawableLeft="@drawable/ic_search"
            android:hint="Search for username"
            android:background="@drawable/gray_rounded_corners"
            android:layout_margin="10dp"
            android:textColorHint="#8e8e8e"
            android:textSize="12dp"
            android:gravity="center"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/fragment_create_group_step1_contactDisplayRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="13dp">
        </android.support.v7.widget.RecyclerView>

        <in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView
            android:id="@+id/fragment_create_group_step1_contactRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </in.myinnos.alphabetsindexfastscrollrecycler.IndexFastScrollRecyclerView>

    </LinearLayout>
</FrameLayout>
