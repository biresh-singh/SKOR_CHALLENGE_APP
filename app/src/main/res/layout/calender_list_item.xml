<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="85dp"
  >
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp">

    <RelativeLayout
    android:id="@+id/relativelayout"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/userlayout"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:background="#50c2ff">
        <utils.CircleImageView
            android:id="@+id/userimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            app:border_color="#FF9100"
            app:border_width="2dp"
            />

    </RelativeLayout>
    <CustomClass.RobotoRegularTextView
        android:id="@+id/title"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="#444444"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/userlayout"
        android:layout_marginTop="2dp"
        android:paddingLeft="20dp"
        android:maxLines="1"


        android:text="Title"/>

    <CustomClass.RobotoRegularTextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#444444"
        android:textSize="12sp"
        android:alpha="0.5"
        android:layout_toRightOf="@+id/userlayout"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/title"
        android:paddingLeft="20dp"
        android:text="subtitle"/>
    <CustomClass.RobotoRegularTextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#444444"
        android:textSize="12sp"
        android:alpha="0.5"
       android:layout_marginBottom="2dp"
        android:layout_toRightOf="@+id/userlayout"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/time"
        android:paddingLeft="20dp"
        android:text="subtitle"/>

    <CustomClass.RobotoRegularTextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="date"
        android:textColor="#a4a4a4"
        android:textSize="12sp"
        android:layout_marginTop="1dp"/>
    <Button
        android:id="@+id/attendingbutton"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="Attending"
        android:layout_alignParentRight="true"
        android:elevation="5dp"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/attending_background"
        android:textSize="10sp"
        android:textColor="#ffffff"
        android:layout_marginRight="20dp"
        ></Button>
</RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>