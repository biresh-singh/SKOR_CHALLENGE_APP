<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/myCoordinatorLayout">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/titlebar"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@drawable/header_bg"
            android:visibility="gone">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="CHAT"
                android:textColor="#ffffff"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/fragment_skor_chat_menupanelLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/panel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_drawer" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_skor_chat_settingsLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/fragment_skor_chat_settingsImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/btn_setting1"
                    android:backgroundTint="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/fragment_skor_chat_chatsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/tab_gray"
                android:gravity="left|center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_skor_chat_chatsImageView"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#e53638"
                    android:src="@drawable/tab_chat" />

                <TextView
                    android:id="@+id/fragment_skor_chat_chatsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center_vertical"
                    android:text="Chats"
                    android:textColor="@color/chat_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_skor_chat_contactsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/tab_gray"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_skor_chat_contactsImageView"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="#e53638"
                    android:src="@drawable/tab_contact" />

                <TextView
                    android:id="@+id/fragment_skor_chat_contactsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="Contacts"
                    android:textColor="@color/chat_text" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_skor_chat_callsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/tab_gray"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_skor_chat_callsImageView"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/tab_phone"/>

                <TextView
                    android:id="@+id/fragment_skor_chat_callsTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:text="Calls"
                    android:textColor="@color/chat_text" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fragment_skor_chat_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
